    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabPanes = document.querySelectorAll('.tab-pane');
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabId = button.dataset.tab;
                    tabButtons.forEach(btn => {
                        btn.classList.remove('tab-active');
                        btn.classList.add('tab-inactive');
                    });
                    button.classList.add('tab-active');
                    button.classList.remove('tab-inactive');
                    tabPanes.forEach(pane => {
                        pane.classList.toggle('hidden', pane.id !== tabId);
                    });
                });
            });
            const commonChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#FFFFFF',
                        titleColor: '#37352f',
                        bodyColor: '#37352f',
                        borderColor: '#e5e7eb',
                        borderWidth: 1,
                        bodyFont: { weight: 'bold', size: 12 },
                        padding: 10,
                        cornerRadius: 8,
                        displayColors: false,
                        callbacks: {
                            label: (context) => `${context.label}: ${context.raw}%`
                        }
                    }
                }
            };
            const distractionCtx = document.getElementById('distractionChart')?.getContext('2d');
            if (distractionCtx) {
                 new Chart(distractionCtx, {
                    type: 'pie',
                    data: {
                        labels: ['Ponsel Mengganggu', 'Aman'],
                        datasets: [{ data: [70, 30], backgroundColor: ['#FF99AA', '#fde68a'] }]
                    },
                    options: commonChartOptions
                });
            }
            const ideasCtx = document.getElementById('ideasChart')?.getContext('2d');
            if (ideasCtx) {
                 new Chart(ideasCtx, {
                    type: 'pie',
                    data: {
                        labels: ['Sulit Cari Ide', 'Gampang!'],
                        datasets: [{ data: [53.3, 46.7], backgroundColor: ['#DAEFF2', '#fde68a'] }]
                    },
                    options: commonChartOptions
                });
            }
        });
    </script>
